<Window x:Class="ClickChallangeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickChallangeGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="10" x:Name="visszaszamlalo" FontSize="16" TextAlignment="Center" Margin="10"/>
        <Button x:Name="kattintoButton" Click="ClickCounterButton" Content="Kattints!" Margin="10" Visibility="Collapsed"/>
        <Button x:Name="startbutton" Content="Start" Click="ClickStartButton" Margin="10"/>
        <TextBlock Text="Kattintások száma: 0" x:Name="pontszamlalo" Margin="10"/>
    </StackPanel>
</Window>
